<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>
	<managed-bean>
		<managed-bean-name>controller</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanUsers</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>login</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanLogin</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>settings</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanSettings</managed-bean-class>
		<managed-bean-scope>application</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>viajes</managed-bean-name>
		<managed-bean-class>com.sdi.presentation.BeanViajes</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{login.verify}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/perfil.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>registro</from-outcome>
			<to-view-id>/registro.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{viajes.listado}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/todos.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/perfil.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{viajes.listado}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/todos.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{viajes.misViajes}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/propios.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>alta</from-outcome>
			<to-view-id>/nuevoViaje.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/nuevoViaje.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{viaje.crear}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/perfil.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/registro.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{controller.registro}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/perfil.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/todos.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{solicitudes.cargar(viaje)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/solicitudes.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-action>#{solicitudes.solicitar(viaje)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/perfil.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<from-view-id>/solicitudes.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{users.cargar(userId)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/usuario.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
</faces-config>
